<!-- Optional JS for instant filtering -->
<script>
function applyFilters() {
    const formData = new FormData();

    // Add all checked checkboxes
    document.querySelectorAll('.filter-checkbox:checked').forEach(cb => {
        formData.append(cb.name, cb.value);
    });

    // Add price dropdown
    const price = document.querySelector('select[name="price_bucket"]').value;
    if (price) formData.append('price_bucket', price);

    // Add brand dropdown
    const brand = document.querySelector('select[name="brand"]').value;
    if (brand) formData.append('brand', brand);

    // Send request
    fetch('/ajax/?' + new URLSearchParams(formData), {
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
    })
    .then(res => res.text())
    .then(html => document.getElementById('product-list').innerHTML = html);
}

// Attach listeners (checkboxes, price dropdown, brand dropdown)
document.querySelectorAll('.filter-checkbox, select[name="price_bucket"], select[name="brand"]')
  .forEach(el => {
    el.addEventListener('change', applyFilters);
});
</script>

